@{
    ViewData["Title"] = "Download Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input id="hdfLastRequestId" type="hidden" value="@ViewBag.lastRequestId" />


<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">                       
                        <a class="btn btn-success" onclick="download_data_events.downloadData()">
                            <i class="fa fa-download"></i>
                            Download Request Data
                        </a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="dtMigratedData" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Source</th>
                                    <th>Category</th>
                                    <th>BU</th>
                                    <th>Base P/N</th>
                                    <th>Part Desc</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>


