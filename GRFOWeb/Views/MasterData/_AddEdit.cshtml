@model MasterDataModels

<!-- Modal -->
<div class="modal fade" id="modalMasterDataAddEdit" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title" id="staticBackdropLabel">@Model.columnValueCaption Add/Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="frmMasterData" class="form-horizontal form-label-left" novalidate>
                    <input type="hidden" asp-for="tableName" />
                    <input type="hidden" asp-for="columnId" value="@Model.columnId" />
                    <input type="hidden" asp-for="columnIdCaption" />
                    <input type="hidden" asp-for="columnIdValue" />
                    <input type="hidden" asp-for="columnValueId" />
                    <input type="hidden" asp-for="columnValueCaption"/>

                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback item form-group">                          
                            <div class="form-group">
                                <label class="col-form-label-sm">@Model.columnIdCaption</label>
                                <div class="input-group">
                                    <input asp-for="columnValue" type="text" class="form-control form-control-sm"
                                           placeholder="@Model.columnValueCaption" required="required">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary btnSave">Save</a>
            </div>
        </div>

    </div>
</div><!-- /.modal -->
